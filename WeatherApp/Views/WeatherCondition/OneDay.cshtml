
@model WeatherApp.Models.WeatherCondition

<div class="container p-2">
    <div class="row pt-4">
        <div class="col-4">
            <h2 class="text-dark">Погода в Санкт-Петербурге</h2>
        </div>
        <div class="col-6, align-baseline">
            <h2 class="text-dark align-content-end">@Model.WeatherDate</h2>
        </div>
    </div>
    <br />

    <table class="table table-dark table-bordered table-striped" style="width:60%; height:auto">
        <thead>
            <tr>
                <th>
                    Температура, °С
                </th>
                <th class="align-middle">
                    Описание
                </th>
                <th>
                    Давление, мм рт.ст.
                </th>
                <th>
                    Влажность, %
                </th>
                <th>
                    Ветер, м/с
                </th>
                <th>
                    Ощущается как, °С
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td width="15%">@Model.Temp.Value.ToString("0.0")</td>
                <td width="25%">@Model.Description</td>
                <td width="15%">@Model.Pressure</td>
                <td width="15%">@Model.Humidity</td>
                <td width="15%">@Model.WindSpeed</td>
                <td width="15%">@Model.TempFeelsLike.Value.ToString("0.0")</td>
            </tr>
        </tbody>
    </table>
</div>